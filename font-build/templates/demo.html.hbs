<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Focalis Icons - {{name}} Demo</title>
    <link rel="stylesheet" href="{{cssPath}}" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            line-height: 1.6;
            color: #333;
            background: #f9fafb;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        header {
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 1px solid #e5e7eb;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 8px;
            color: #111827;
        }

        .subtitle {
            font-size: 1.1rem;
            color: #6b7280;
            margin-bottom: 24px;
        }

        .meta {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 20px;
            font-size: 0.9rem;
            color: #4b5563;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .badge {
            background: #e0e7ff;
            color: #3730a3;
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .search-container {
            position: relative;
            max-width: 500px;
            margin-bottom: 40px;
        }

        #search {
            width: 100%;
            padding: 14px 20px 14px 48px;
            border: 2px solid #d1d5db;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.2s;
            background: white;
        }

        #search:focus {
            outline: none;
            border-color: #8b5cf6;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
        }

        .search-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            pointer-events: none;
        }

        .controls {
            display: flex;
            gap: 16px;
            margin-bottom: 30px;
            align-items: center;
            flex-wrap: wrap;
        }

        .size-controls {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        #sizeSlider {
            width: 180px;
        }

        #iconSize {
            width: 60px;
            padding: 8px;
            border: 1px solid #d1d5db;
            border-radius: 6px;
            text-align: center;
        }

        .color-controls {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        #colorPicker {
            width: 100px;
            height: 40px;
            border: 1px solid #d1d5db;
            border-radius: 6px;
            cursor: pointer;
        }

        .results-info {
            margin-bottom: 20px;
            color: #6b7280;
            font-size: 0.95rem;
        }

        #resultsCount {
            font-weight: 600;
            color: #111827;
        }

        .icons-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            gap: 24px;
            margin-bottom: 60px;
        }

        .icon-item {
            background: white;
            border-radius: 12px;
            padding: 24px;
            text-align: center;
            transition: all 0.2s;
            border: 1px solid #e5e7eb;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 180px;
        }

        .icon-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
            border-color: #8b5cf6;
        }

        .icon-preview {
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 80px;
        }

        .icon-name {
            font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
            font-size: 0.85rem;
            color: #374151;
            background: #f3f4f6;
            padding: 6px 10px;
            border-radius: 6px;
            word-break: break-word;
            width: 100%;
        }

        .icon-class {
            font-size: 0.75rem;
            color: #6b7280;
            margin-top: 8px;
            font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
        }

        .no-results {
            grid-column: 1 / -1;
            text-align: center;
            padding: 60px;
            color: #9ca3af;
        }

        footer {
            margin-top: 60px;
            padding-top: 30px;
            border-top: 1px solid #e5e7eb;
            text-align: center;
            color: #6b7280;
            font-size: 0.9rem;
        }

        footer a {
            color: #8b5cf6;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .icons-grid {
                grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
                gap: 16px;
            }
            
            h1 {
                font-size: 2rem;
            }
        }

        @media (max-width: 480px) {
            .icons-grid {
                grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
            }
            
            .icon-item {
                padding: 16px;
                min-height: 150px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Focalis Icons</h1>
            <div class="subtitle">{{name}} - {{iconsCount}} icons</div>
            
            <div class="meta">
                <div class="meta-item">
                    <span>Font family:</span>
                    <strong>"{{cssFontName}}"</strong>
                </div>
                <div class="meta-item">
                    <span>Font weight:</span>
                    <strong>{{cssFontWeight}}</strong>
                </div>
                <div class="meta-item">
                    <span>CSS prefix:</span>
                    <div class="badge">{{prefix}}</div>
                </div>
                <div class="meta-item">
                    <span>Base class:</span>
                    <div class="badge">{{cssSelector}}</div>
                </div>
            </div>
        </header>

        <div class="search-container">
            <div class="search-icon">
                <i class="{{cssSelector}} {{prefix}}search"></i>
            </div>
            <input 
                type="text" 
                id="search" 
                placeholder="Search {{iconsCount}} icons by name..." 
                autocomplete="off"
            />
        </div>

        <div class="controls">
            <div class="size-controls">
                <label for="sizeSlider">Icon Size:</label>
                <input type="range" id="sizeSlider" min="16" max="96" value="48" />
                <input type="number" id="iconSize" min="16" max="200" value="48" /> px
            </div>
            
            <div class="color-controls">
                <label for="colorPicker">Icon Color:</label>
                <input type="color" id="colorPicker" value="#111827" />
            </div>
        </div>

        <div class="results-info">
            Showing <span id="resultsCount">{{iconsCount}}</span> icons
        </div>

        <div class="icons-grid" id="iconsContainer">
            {{#each codepoints}}
            <div class="icon-item" data-name="{{@key}}">
                <div class="icon-preview">
                    <i class="{{../cssSelector}} {{../prefix}}{{@key}}"></i>
                </div>
                <div class="icon-name">{{@key}}</div>
                <div class="icon-class">{{../cssSelector}} {{../prefix}}{{@key}}</div>
            </div>
            {{/each}}
        </div>

        <footer>
            <p>
                Made with <i class="{{cssSelector}} {{prefix}}heart"></i> by 
                <a href="https://focalisdesk.com" target="_blank">FocalisDesk</a>
            </p>
            <p>
                <a href="https://github.com/FocalisDesk/focalis-icons" target="_blank">GitHub</a> • 
                <a href="https://github.com/FocalisDesk/focalis-icons/blob/main/LICENSE" target="_blank">MIT License</a> • 
                v{{version}}
            </p>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('search');
            const iconsContainer = document.getElementById('iconsContainer');
            const iconItems = document.querySelectorAll('.icon-item');
            const resultsCount = document.getElementById('resultsCount');
            const sizeSlider = document.getElementById('sizeSlider');
            const iconSizeInput = document.getElementById('iconSize');
            const colorPicker = document.getElementById('colorPicker');
            
            let currentSize = 48;
            let currentColor = '#111827';
            
            // Search functionality
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                let visibleCount = 0;
                
                iconItems.forEach(item => {
                    const iconName = item.dataset.name.toLowerCase();
                    if (iconName.includes(searchTerm)) {
                        item.style.display = 'flex';
                        visibleCount++;
                    } else {
                        item.style.display = 'none';
                    }
                });
                
                resultsCount.textContent = visibleCount;
                
                // Show no results message
                const noResults = document.querySelector('.no-results');
                if (visibleCount === 0 && !noResults) {
                    const noResultsDiv = document.createElement('div');
                    noResultsDiv.className = 'no-results';
                    noResultsDiv.innerHTML = `
                        <i class="{{cssSelector}} {{prefix}}search" style="font-size: 48px; margin-bottom: 16px;"></i>
                        <h3>No icons found</h3>
                        <p>Try searching with different terms</p>
                    `;
                    iconsContainer.appendChild(noResultsDiv);
                } else if (visibleCount > 0 && noResults) {
                    noResults.remove();
                }
            });
            
            // Size controls
            function updateIconSize(size) {
                currentSize = size;
                document.querySelectorAll('.icon-preview i').forEach(icon => {
                    icon.style.fontSize = `${size}px`;
                    icon.style.color = currentColor;
                });
            }
            
            sizeSlider.addEventListener('input', function() {
                const size = parseInt(this.value);
                iconSizeInput.value = size;
                updateIconSize(size);
            });
            
            iconSizeInput.addEventListener('input', function() {
                let size = parseInt(this.value);
                size = Math.min(200, Math.max(16, size));
                this.value = size;
                sizeSlider.value = size;
                updateIconSize(size);
            });
            
            // Color picker
            colorPicker.addEventListener('input', function() {
                currentColor = this.value;
                updateIconSize(currentSize);
            });
            
            // Copy to clipboard on click
            iconItems.forEach(item => {
                item.addEventListener('click', function() {
                    const iconClass = this.querySelector('.icon-class').textContent;
                    navigator.clipboard.writeText(iconClass).then(() => {
                        const originalText = this.querySelector('.icon-name').textContent;
                        this.querySelector('.icon-name').textContent = 'Copied!';
                        this.querySelector('.icon-name').style.background = '#d1fae5';
                        this.querySelector('.icon-name').style.color = '#065f46';
                        
                        setTimeout(() => {
                            this.querySelector('.icon-name').textContent = originalText;
                            this.querySelector('.icon-name').style.background = '#f3f4f6';
                            this.querySelector('.icon-name').style.color = '#374151';
                        }, 1500);
                    });
                });
            });
            
            // Initialize
            updateIconSize(48);
        });
    </script>
</body>
</html>
