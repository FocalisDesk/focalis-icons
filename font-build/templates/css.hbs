@font-face {
  font-family: "{{fontFamily}}";
  font-weight: {{fontWeight}};
  font-style: {{fontStyle}};
  font-display: block;
  src: 
    url("{{fontsUrl}}/{{fontName}}.woff2?v={{version}}") format("woff2"),
    url("{{fontsUrl}}/{{fontName}}.woff?v={{version}}") format("woff"),
    url("{{fontsUrl}}/{{fontName}}.ttf?v={{version}}") format("truetype"),
    url("{{fontsUrl}}/{{fontName}}.eot?v={{version}}#iefix") format("embedded-opentype");
}

{{#with selector}}
{{{this}}} {
  display: inline-block;
  font-family: "{{../fontFamily}}";
  font-weight: {{../fontWeight}};
  font-style: {{../fontStyle}};
  font-size: 24px;
  line-height: 1;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-variant: normal;
  text-transform: none;
}
{{/with}}

{{#each codepoints}}
{{../selector}}.{{../prefix}}{{@key}}::before {
  content: "\\{{codepoint this}}";
}
{{/each}}
