@font-face {
  font-family: "{{cssFontName}}";
  font-weight: {{cssFontWeight}};
  font-style: {{cssFontStyle}};
  font-display: block;
  src: 
    url("{{fontsUrl}}/{{name}}.woff2?v={{version}}") format("woff2"),
    url("{{fontsUrl}}/{{name}}.woff?v={{version}}") format("woff"),
    url("{{fontsUrl}}/{{name}}.ttf?v={{version}}") format("truetype"),
    url("{{fontsUrl}}/{{name}}.eot?v={{version}}#iefix") format("embedded-opentype");
}

{{selector}} {
  display: inline-block;
  font-family: "{{cssFontName}}";
  font-weight: {{cssFontWeight}};
  font-style: {{cssFontStyle}};
  font-size: 24px;
  line-height: 1;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-variant: normal;
  text-transform: none;
}

{{#each codepoints}}
.{{../selector}}.{{../prefix}}{{@key}}::before {
  content: "\\{{codepoint this}}";
}
{{/each}}