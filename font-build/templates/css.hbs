 * Focalis Icons v{{version}} - {{name}}
 * (c) {{year}} FocalisDesk
 * License: MIT
 * GitHub: https://github.com/FocalisDesk/focalis-icons
 * 
 * Template Variables Reference:
 * - name: Font file base name and font family identifier
 * - fontsUrl: Relative URL path to font files
 * - version: Version string for cache busting
 * - selector: Base CSS selector (e.g., .fi)
 * - prefix: Icon class prefix (e.g., fi-rr-, fi-tr-)
 * - codepoints: Object mapping icon names to Unicode codepoints
 * - formatOptions.ttf: TTF-specific options (fontName, fontWeight, fontStyle)
 * 
 * CI/CD Note: Ensure all template variables above are properly defined
 * in the Fantasticon configuration files before building.
 */

@font-face {
  font-family: "{{#if formatOptions.ttf.fontName}}{{formatOptions.ttf.fontName}}{{else}}{{name}}{{/if}}";
  font-weight: {{#if formatOptions.ttf.fontWeight}}{{formatOptions.ttf.fontWeight}}{{else}}400{{/if}};
  font-style: {{#if formatOptions.ttf.fontStyle}}{{formatOptions.ttf.fontStyle}}{{else}}normal{{/if}};
  font-display: block;
  src: 
    url("{{fontsUrl}}/{{name}}.woff2?v={{version}}") format("woff2"),
    url("{{fontsUrl}}/{{name}}.woff?v={{version}}") format("woff"),
    url("{{fontsUrl}}/{{name}}.ttf?v={{version}}") format("truetype"),
    url("{{fontsUrl}}/{{name}}.eot?v={{version}}#iefix") format("embedded-opentype");
}

{{selector}} {
  display: inline-block;
  font-family: "{{#if formatOptions.ttf.fontName}}{{formatOptions.ttf.fontName}}{{else}}{{name}}{{/if}}";
  font-weight: {{#if formatOptions.ttf.fontWeight}}{{formatOptions.ttf.fontWeight}}{{else}}400{{/if}};
  font-style: {{#if formatOptions.ttf.fontStyle}}{{formatOptions.ttf.fontStyle}}{{else}}normal{{/if}};
  font-size: 24px;
  line-height: 1;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-variant: normal;
  text-transform: none;
}

{{#each codepoints}}
.{{../selector}}.{{../prefix}}{{@key}}::before {
  content: "\\{{codepoint this}}";
}
{{/each}}